#!/bin/bash

[ -z "${MAIN_DIR}" ] && export MAIN_DIR="$(realpath -s $(dirname ${0})/../..)"


export PACKAGE="qtcurve"

# Uncomment if necessary:
# export SFX="-5"

# export NEW_VER=1.8.18+git20160320-3d8622c

export A_TYPE="gz"

# experimental unstable
export MAIN_DIST="unstable"


# Launch common script for setting variables
source "${MAIN_DIR}/Debian/setting_variables"


# Get old version
GetOldVersion


# Find new version
export PROJECT=qtcurve
export VER_LIST=$(curl "https://cgit.kde.org/${PROJECT}.git/refs/tags" 2>&1 | sed -ne "s|^.*'/${PROJECT}.git/tag/?h=\([0-9\.]*\)'>.*$|\1|p")
if [ -z "${NEW_VER}" ]; then
    export NEW_VER=$(echo "${VER_LIST}" | sort -r -V | head -n1)
fi
export NEW_VER_FULL=${NEW_VER}${SFX}



# Display versions
DisplayVersions "https://cgit.kde.org/${PROJECT}.git"



# Print versions
PrintVersions "${@}"


# Check versions
CheckVersions


# Get sources
GetSources


# Launch common script for updating packages and uploading them to mentors.debian.net
source "${MAIN_DIR}/Debian/updating_packages"

