# ~/.gitconfig

[user]
    name = Boris Pek
    email = tehnick-8@yandex.ru

[core]
    editor = nano

[alias]
    up = pull --all --prune
    br = branch
    st = status
    co = checkout
    cm = commit
    pom = push -u origin master

[pull]
    rebase = false

[push]
    default = matching

[color]
    ui = auto

[core]
    quotepath = false

[i18n]
    commitencoding = utf8
    logoutputencoding = utf8

[url "git@github.com:"]
    pushInsteadOf = https://github.com/

[url "git@salsa.debian.org:"]
    pushInsteadOf = https://salsa.debian.org/

[url "ssh://git.debian.org"]
    pushInsteadOf = https://anonscm.debian.org

[url "ssh://tehnick@git.code.sf.net"]
