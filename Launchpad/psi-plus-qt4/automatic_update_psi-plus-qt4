#!/bin/bash

[ -z "${MAIN_DIR}" ] && export MAIN_DIR="$(realpath -s $(dirname ${0})/../..)"


export PACKAGE="psi-plus-qt4"

# Uncomment if necessary:
#export SFX="-0ppa2"

#export NEW_VER=0.15.5267

export A_TYPE="gz"


# Launch common script for setting variables
source "${MAIN_DIR}/Launchpad/setting_variables"
export MAIN_DIST="trusty"
export UBUNTU_SFX="~${MAIN_DIST}1"


# Get old version
GetOldVersion


# Find new version
export DEVELOPER=psi-plus
export PROJECT=psi-plus-snapshots
export VER_LIST=$(curl "https://github.com/${DEVELOPER}/${PROJECT}/tags" 2>&1 | sed -ne "s:^.*\"/${DEVELOPER}/${PROJECT}/archive/\(.*\).tar.gz\" .*:\1:p")
if [ -z "${NEW_VER}" ]; then
    export NEW_VER=$(echo "${VER_LIST}" | sort -r -V | head -n1)
fi
export NEW_VER_FULL=${NEW_VER}${SFX}${UBUNTU_SFX}


# Display versions
DisplayVersions "https://github.com/${DEVELOPER}/${PROJECT}/tags"


# Print versions
PrintVersions "${@}"


# Check versions
CheckVersions


# Get sources
GetSources
mv "psi-plus_${NEW_VER}.orig.tar.${A_TYPE}" "${PACKAGE}_${NEW_VER}.orig.tar.${A_TYPE}"


export UPDATE_STRING="Backport to Ubuntu Trusty."

export DESTINATION="psi-plus"

export DIST_LIST=" "

export DIR_NAME="psi-plus-snapshots-${NEW_VER}"
export OLD_DIR_NAME="psi-plus-snapshots-${OLD_VER}"

# Launch common script for updating packages and uploading them to Launchpad
source "${MAIN_DIR}/Launchpad/updating_packages"

